<%- contentFor('body') %>
<div class="container mt-5">
  <h1 class="mb-4">Tạo bài viết mới</h1>
  <form action="/writer/create" method="POST" enctype="multipart/form-data">
    <!-- Title -->
    <div class="mb-3">
      <label for="title" class="form-label">Tiêu đề bài viết</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="title"
        placeholder="Nhập tiêu đề bài viết"
        required
      />
    </div>

    <!-- Abstract -->
    <div class="mb-3">
      <label for="abstract" class="form-label">Tóm tắt</label>
      <textarea
        class="form-control"
        id="abstract"
        name="abstract"
        rows="3"
        placeholder="Nhập tóm tắt bài viết"
        required
      ></textarea>
    </div>

    <!-- Content -->
    <div class="mb-3">
      <label for="content" class="form-label">Nội dung</label>
      <textarea
        class="form-control"
        id="content"
        name="content"
        rows="10"
        placeholder="Nhập nội dung bài viết"
        required
      ></textarea>
    </div>

    <!-- Thumbnail -->
    <div class="mb-3">
      <label for="thumbnail" class="form-label">Ảnh đại diện</label>
      <input
        type="file"
        class="form-control"
        id="thumbnail"
        name="thumbnail"
        accept="image/*"
      />
    </div>

    <!-- Category -->
    <div class="mb-3">
      <label for="category" class="form-label">Chuyên mục</label>
      <select class="form-select" id="category" name="categoryId" required>
        <option value="" selected disabled>Chọn chuyên mục</option>
        <% categories.forEach(category => { %>
        <option value="<%= category.id %>"><%= category.name %></option>
        <% }) %>
      </select>
    </div>

    <!-- Admin ID -->
    <div class="mb-3">
      <label for="adminId" class="form-label">ID Admin</label>
      <input
        type="number"
        class="form-control"
        id="adminId"
        name="adminId"
        placeholder="Nhập ID của admin"
        min="1"
      />
    </div>

    <!-- Submit Button -->
    <div class="d-grid">
      <button type="submit" class="btn btn-primary">Tạo bài viết</button>
    </div>
  </form>
</div>
