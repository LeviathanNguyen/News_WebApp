<%- contentFor('body') %>
<h1>Quản lý Categories</h1>

<!-- Form thêm category -->
<form action="/admin/categories" method="POST" class="mb-4">
  <div class="form-group">
    <label for="name">Tên Category</label>
    <input type="text" name="name" id="name" class="form-control" required />
  </div>
  <div class="form-group">
    <label for="description">Mô tả Category</label>
    <textarea
      name="description"
      id="description"
      class="form-control"
      rows="3"
      placeholder="Nhập mô tả cho category"
    ></textarea>
  </div>
  <button type="submit" class="btn btn-primary mt-2">Thêm Category</button>
</form>

<!-- Danh sách Categories -->
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Tên Category</th>
      <th>Mô tả</th>
    </tr>
  </thead>
  <tbody>
    <% categories.forEach((category, index) => { %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= category.name %></td>
      <td><%= category.description %></td>
    </tr>
    <% }); %>
  </tbody>
</table>
